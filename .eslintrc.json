{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab", {
			"SwitchCase": 1
		}],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-tabs": "off",
		"no-mixed-spaces-and-tabs": "error",
		"no-unused-vars": "off"
	}
}
