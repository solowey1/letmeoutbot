# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_IDS=123456789,987654321

# Outline VPN Configuration
OUTLINE_API_URL=https://your-outline-server:port/your-api-key

# Database Configuration
# Options: 'sqlite', 'postgres', 'supabase'
DATABASE_TYPE=supabase

# SQLite (если DATABASE_TYPE=sqlite)
DATABASE_PATH=./database.db

# Supabase (если DATABASE_TYPE=supabase) - РЕКОМЕНДУЕТСЯ
# Получите из: Supabase Dashboard → Settings → API
SUPABASE_URL=https://zvipxeojiiyhfelsekjt.supabase.co
SUPABASE_API_KEY=your_supabase_anon_key_here

# PostgreSQL Direct (если DATABASE_TYPE=postgres)
# Получите из: Supabase Dashboard → Settings → Database → Connection string → URI
# Формат: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.zvipxeojiiyhfelsekjt:[YOUR-PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# Или отдельно (альтернатива DATABASE_URL для postgres):
POSTGRES_HOST=aws-0-eu-central-1.pooler.supabase.com
POSTGRES_PORT=6543
POSTGRES_DB=postgres
POSTGRES_USER=postgres.abcdefghijklmnopqrst
POSTGRES_PASSWORD=your_supabase_password

# Application Settings
NODE_ENV=production
LOG_LEVEL=info