# ==================================
# Telegram Bot Configuration
# ==================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_IDS=123456789,987654321

# ==================================
# Outline VPN Configuration
# ==================================
OUTLINE_API_URL=https://your-outline-server:port/your-api-key

# ==================================
# Database Configuration
# ==================================
# Options: 'sqlite', 'postgres', or 'supabase'
DATABASE_TYPE=supabase

# ----------------------------------
# SQLite (if DATABASE_TYPE=sqlite)
# ----------------------------------
DATABASE_PATH=./database.db

# ----------------------------------
# Supabase (if DATABASE_TYPE=supabase) - RECOMMENDED
# ----------------------------------
# Get from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_API_KEY=your_supabase_anon_key_here

# ----------------------------------
# PostgreSQL Direct (if DATABASE_TYPE=postgres)
# ----------------------------------
# Get from: Supabase Dashboard → Settings → Database → Connection string → URI
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# Or use your own PostgreSQL server
DATABASE_URL=postgresql://postgres.your-project-ref:[YOUR-PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# OR specify PostgreSQL connection parameters separately:
POSTGRES_HOST=aws-0-eu-central-1.pooler.supabase.com
POSTGRES_PORT=6543
POSTGRES_DB=postgres
POSTGRES_USER=postgres.your-project-ref
POSTGRES_PASSWORD=your_postgres_password

# ==================================
# Application Settings
# ==================================
NODE_ENV=production
LOG_LEVEL=info
